# ==================================================
# CONFIGURACIÓN DEL SISTEMA DE ORQUESTACIÓN - ETAPA 6
# ==================================================

# ===== INFORMACIÓN DE WORKERS =====
# Worker 1 (VM Principal)
WORKER_01_ID=worker-01
WORKER_01_IP=172.20.10.3
WORKER_01_PORT=8080

# Worker 2 (VM Secundaria)
WORKER_02_ID=worker-02
WORKER_02_IP=172.20.10.4
WORKER_02_PORT=8080

# ===== CONFIGURACIÓN DEL ORQUESTADOR =====
ORCHESTRATOR_TIMEOUT=5
ORCHESTRATOR_RETRY_ATTEMPTS=3
ORCHESTRATOR_MAX_CONCURRENT_TASKS=10

# ===== CONFIGURACIÓN DEL SISTEMA ELÁSTICO (ETAPA 5) =====
# Intervalo de ping a workers (segundos)
ELASTIC_PING_INTERVAL=5
# Intervalo de verificación de salud (segundos)
ELASTIC_HEALTH_CHECK_INTERVAL=10
# Máximo número de fallos de ping consecutivos antes de marcar como inactivo
ELASTIC_MAX_PING_FAILURES=5
# Tiempo máximo sin ping exitoso para considerar unhealthy (segundos)
ELASTIC_HEALTH_TIMEOUT=30

# ===== CONFIGURACIÓN DE COLA DE TAREAS (ETAPA 6) =====
# Intervalo de distribución de tareas (segundos)
TASK_DISTRIBUTION_INTERVAL=2
# Máximo número de reintentos para tareas fallidas
MAX_TASK_RETRIES=3
# Tamaño del histórico de tareas por worker
TASK_HISTORY_SIZE=100
# Intervalo para guardado de resultados (segundos)
RESULTS_SAVE_INTERVAL=300

# ===== CONFIGURACIÓN DE DOCKER =====
DOCKER_IMAGE_NAME=particle-simulation
DOCKER_IMAGE_TAG=latest

# ===== CONFIGURACIÓN DE SIMULACIÓN =====
DEFAULT_NUM_PARTICLES=100
DEFAULT_NUM_STEPS=500
DEFAULT_SEED=42

# ===== CONFIGURACIÓN DE LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/orchestrator.log
ELASTIC_LOG_FILE=logs/elastic_orchestrator.log
WORKER_LOG_DIR=logs

# ===== CONFIGURACIÓN DE RED =====
# Timeout para conexiones HTTP (segundos)
HTTP_TIMEOUT=10
# Timeout para ejecución de tareas (segundos)
TASK_TIMEOUT=60

# ===== CONFIGURACIÓN DE BENCHMARKS =====
BENCHMARK_PYTHON=benchmark.py
BENCHMARK_CYTHON=benchmark_cython.py

# ===== CONFIGURACIÓN DE DESARROLLO =====
DEBUG_MODE=false
VERBOSE_OUTPUT=true

# ===== CONFIGURACIÓN DE ARCHIVOS =====
CONFIG_FILE=config_workers.json
WORKER_STATE_FILE=logs/worker_state.json
RESULTS_DIR=results
TEMP_DIR=temp
